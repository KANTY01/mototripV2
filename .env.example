# Server Configuration
PORT=3001
NODE_ENV=development
API_VERSION=v1
HOST=localhost

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=motortrip_dev
DB_USER=your_username
DB_PASSWORD=your_password
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_IDLE_TIMEOUT=10000

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_PREFIX=motortrip:
REDIS_TTL=3600

# JWT Configuration
JWT_SECRET=your_jwt_secret_key
JWT_REFRESH_SECRET=your_jwt_refresh_secret
JWT_EXPIRATION=1h
JWT_REFRESH_EXPIRATION=7d
JWT_ISSUER=motortrip-api
JWT_AUDIENCE=motortrip-client

# Security
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100
BCRYPT_ROUNDS=12
CSRF_SECRET=your_csrf_secret
SECURE_COOKIE=false

# Logging
LOG_LEVEL=debug
LOG_FORMAT=dev
ACCESS_LOG=true
ERROR_LOG=true

# Email (for future use)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_password
EMAIL_FROM=noreply@motortrip.com

# Admin Configuration
ADMIN_EMAIL=admin@motortrip.com
ADMIN_PASSWORD=change_this_password
ADMIN_INITIAL_ROLE=super_admin

# Feature Flags
ENABLE_REDIS_CACHE=true
ENABLE_REQUEST_LOGGING=true
ENABLE_AUDIT_LOGGING=true
ENABLE_RATE_LIMITING=true
ENABLE_CSRF=true

# Testing
TEST_DB_NAME=motortrip_test
TEST_DB_HOST=localhost
TEST_DB_PORT=5432
TEST_DB_USER=test_user
TEST_DB_PASSWORD=test_password

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_CRON=0 0 * * *
BACKUP_PATH=./backups
BACKUP_RETENTION_DAYS=7

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_PATH=/health
